# EditorConfig: https://editorconfig.org

# Indicates this is the top-most EditorConfig file
root = true

# Configurations shared for all files (can be overridden)
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.py]
indent_size = 4
indent_style = space

[*.md]
indent_size = 4
indent_style = space
